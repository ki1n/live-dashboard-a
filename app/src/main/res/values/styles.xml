<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="defaultTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textColor">@color/background_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_text_standard</item>
        <item name="paddingStart">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
    </style>

</resources>
